# Production Environment Configuration for Hostinger VPS
# Copy this file to .env and fill in your actual values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=5000

# Replace with your actual domain
FRONTEND_URL=https://yourdomain.com

# ============================================
# Database Configuration
# ============================================
# Local MongoDB (if installed on VPS)
MONGODB_URI=mongodb://phygital_user:your_password@localhost:27017/phygital

# OR MongoDB Atlas (recommended for production)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/phygital?retryWrites=true&w=majority

# ============================================
# JWT Configuration
# ============================================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRE=7d

# ============================================
# File Storage Configuration
# Choose one: AWS S3 or Cloudinary
# ============================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_BUCKET_NAME=your-s3-bucket-name

# Cloudinary Configuration (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ============================================
# CORS Configuration
# ============================================
# Add all your domains (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://api.yourdomain.com

# ============================================
# Email Configuration (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Email from address
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Phygital

# ============================================
# Security Configuration
# ============================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session configuration
SESSION_SECRET=another_random_secret_CHANGE_THIS

# ============================================
# Application Configuration
# ============================================
# Max file upload size (in bytes)
MAX_FILE_SIZE=104857600

# Allowed file types
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,model/gltf-binary,model/gltf+json

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/phygital/app.log

# ============================================
# Analytics Configuration
# ============================================
ENABLE_ANALYTICS=true

# ============================================
# External Services (if any)
# ============================================
# Add any third-party API keys here


