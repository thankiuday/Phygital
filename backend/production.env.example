# Production Environment Configuration for Render
# These variables should be set in Render dashboard, not in a .env file

# Database Configuration (automatically provided by Render database)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/phygital?retryWrites=true&w=majority

# JWT Configuration (JWT_SECRET will be auto-generated by Render)
JWT_SECRET=your_super_secure_jwt_secret_for_production_min_32_chars
JWT_EXPIRE=7d

# Admin Authentication Security
ADMIN_EMAIL=admin@phygital.zone
ADMIN_PASSWORD=YourSecureAdminPassword123!
ADMIN_JWT_EXPIRE=2h

# AWS S3 Configuration (for file storage - set these in Render dashboard)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=phygital-production

# Cloudinary Configuration (alternative to S3 - set these in Render dashboard)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Server Configuration (automatically set by Render)
PORT=10000
NODE_ENV=production

# Frontend URL (update this to your actual Render frontend URL)
FRONTEND_URL=https://phygital-frontend.onrender.com

# Optional: Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: File upload limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5