# Production Environment Configuration for Phygital Backend
# Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=10000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB Atlas connection string (replace with your actual MongoDB URI)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/phygital?retryWrites=true&w=majority

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# JWT secret for token signing (minimum 32 characters)
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_for_production
JWT_EXPIRE=7d

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Frontend URL for CORS and QR code generation
# Update this to your actual Render frontend URL after deployment
FRONTEND_URL=https://phygital-frontend.onrender.com

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Choose ONE storage option (AWS S3 OR Cloudinary)

# OPTION A: AWS S3 Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=phygital-production

# OPTION B: Cloudinary Configuration (Alternative to S3)
# =============================================================================
# CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
# CLOUDINARY_API_KEY=your_cloudinary_api_key
# CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# =============================================================================
# OPTIONAL: MONITORING AND ANALYTICS
# =============================================================================
# Enable/disable features
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true

# =============================================================================
# OPTIONAL: CACHING CONFIGURATION
# =============================================================================
# Redis configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION (if implementing email features)
# =============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@phygital.com
# FROM_NAME=Phygital

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics (if implementing)
# GA_TRACKING_ID=G-XXXXXXXXXX

# Social media API keys (if implementing social features)
# TWITTER_API_KEY=your_twitter_api_key
# FACEBOOK_APP_ID=your_facebook_app_id
# INSTAGRAM_CLIENT_ID=your_instagram_client_id

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION
# =============================================================================
# Enable detailed logging in production (set to false for better performance)
DEBUG=false
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RENDER SPECIFIC CONFIGURATION
# =============================================================================
# Render automatically sets these, but you can override if needed
# RENDER=true
# RENDER_EXTERNAL_URL=https://phygital-backend.onrender.com
# RENDER_EXTERNAL_HOSTNAME=phygital-backend.onrender.com

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Never commit this file to version control (add to .gitignore)
# 3. Set these variables in Render dashboard instead of using this file
# 4. Keep your secrets secure and rotate them regularly
# 5. Use environment-specific values for different deployments
