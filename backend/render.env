# =============================================================================
# PHYGITAL BACKEND - RENDER PRODUCTION ENVIRONMENT
# =============================================================================
# This file contains all environment variables needed for Render deployment
# Copy this to .env and update with your actual values
# DO NOT commit .env file to version control

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=10000

# =============================================================================
# DATABASE CONFIGURATION (MongoDB Atlas)
# =============================================================================
# Replace with your actual MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/phygital?retryWrites=true&w=majority

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# Generate a secure JWT secret (minimum 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=phygital_super_secure_jwt_secret_for_production_2024_minimum_32_chars
JWT_EXPIRE=7d

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# Update this to your actual Render frontend URL after deployment
FRONTEND_URL=https://phygital-frontend.onrender.com

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================
# Choose ONE storage option (AWS S3 OR Cloudinary)

# OPTION A: AWS S3 Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=phygital-production

# OPTION B: Cloudinary Configuration (Alternative to S3)
# =============================================================================
# Uncomment these if using Cloudinary instead of AWS S3
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting (15 minutes window, 100 requests max)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File upload limits (10MB max file size)
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# =============================================================================
# MONITORING AND ANALYTICS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_REPORTING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# RENDER SPECIFIC CONFIGURATION
# =============================================================================
# These are automatically set by Render, but you can override if needed
# RENDER=true
# RENDER_EXTERNAL_URL=https://phygital-backend.onrender.com
# RENDER_EXTERNAL_HOSTNAME=phygital-backend.onrender.com

# =============================================================================
# OPTIONAL: EMAIL CONFIGURATION
# =============================================================================
# Uncomment and configure if you plan to implement email features
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
# FROM_EMAIL=noreply@phygital.com
# FROM_NAME=Phygital

# =============================================================================
# OPTIONAL: CACHING CONFIGURATION
# =============================================================================
# Uncomment if you plan to implement Redis caching
# REDIS_URL=redis://localhost:6379
# CACHE_TTL=3600

# =============================================================================
# OPTIONAL: THIRD-PARTY INTEGRATIONS
# =============================================================================
# Google Analytics (if implementing)
# GA_TRACKING_ID=G-XXXXXXXXXX

# Social media API keys (if implementing social features)
# TWITTER_API_KEY=your_twitter_api_key
# FACEBOOK_APP_ID=your_facebook_app_id
# INSTAGRAM_CLIENT_ID=your_instagram_client_id

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION
# =============================================================================
# Set to false for better performance in production
DEBUG=false

# =============================================================================
# DEPLOYMENT NOTES
# =============================================================================
# 1. Replace all placeholder values with your actual credentials
# 2. Set these variables in Render dashboard (recommended for production)
# 3. Never commit this file to version control
# 4. Keep your secrets secure and rotate them regularly
# 5. Test all configurations before deploying to production
# 6. Monitor logs and performance after deployment
